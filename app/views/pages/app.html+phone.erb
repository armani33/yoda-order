      </div>
      <div class="info-bullet">
        <%= image_tag('App/Bar-chart@2x.png', class: "circle-info") %>
        <p class="info">Monitor and analize statistics</p>
      </div>
    </div>
    <div class="phone-page">
      <%= image_tag('App/Iphone_X_stat-infos-mobile@2x.png', class: "bluetoot-paring-mobile") %>
