    </div>
    <%= image_tag('App/download-app-btn@2x.png', class: "app-btn-download") %>
    <div class="phone">
      <%= image_tag('App/Iphone_X_home-page-mobile@2x.png', class: "home-page-app") %>
    </div>
  </div>

  <div class="page-mobile-app-container black-bg">
    <div class="text-content page-margin">
      <p class="title">APP-BASED ON/OFF</p>
