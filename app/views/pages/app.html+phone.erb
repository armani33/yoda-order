  </div>

  <div class="page-mobile-app-container white-bg">
    <div class="text-content page-margin">
      <p class="title">NOTIFICATION</p>
      <h1>Stay<br><span>informed</span>.</h1>
      <p>Our remotes diagnostics system sends<br>you notifications about your bike. For<br>example, know when your brake-pads<br>or your tires need replacing.</p>
    </div>
    <%= link_to root_path do %>
      <p class="link-green">Know more about our service support</p>
      <i class="fas fa-chevron-right"></i>
    <% end %>
    <div class="phone-page">
      <%= image_tag('App/Iphone_X_notifications-mobile@2x.png', class: "bluetoot-paring-mobile") %>
    </div>
  </div>

  <%= render "shared/footer" %>
  <div class="footer-mobile-height"></div>
</div>







<script>
  $(document).ready(function() {
      $(window).scroll(function() {
          var height = $('.page-1-mobile-content').height();
          var scrollTop = $(window).scrollTop();

          if (scrollTop >= height - height*0.96) {
            $('.nav-mobile-container').addClass('solid-mobile-nav');
            $('.nav-mobile-container').removeClass('solid-mobile-black-nav');
          } else {
            $('.nav-mobile-container').removeClass('solid-mobile-nav');
            $('.nav-mobile-container').removeClass('solid-mobile-black-nav');
          }
      });
  });
</script>
