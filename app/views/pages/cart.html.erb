            <a href="http://www.facebook.com/sharer/sharer.php?u=<%= CGI::escape(root_url) %>&title=YodaCity" class="fb" target="_blank"><i class="fab fa-facebook" style="color: #001C7A;"></i></a>
            <a href="http://twitter.com/share?url=<%= CGI::escape(root_url) %>&text=<%= CGI::escape(twitter_message) %>" class="twit" target="_blank"><i class="fab fa-twitter-square" style="color: #001C7A;"></i></a>
          </div>
        </div>
      </div>
    </div>

  </div>



</div>

<script>
  function openCheckTab(tabName) {
    var i;
    var x = document.getElementsByClassName("check-tab");
    for (i = 0; i < x.length; i++) {
      x[i].style.display = "none";
    }
    document.getElementById(tabName).style.display = "block";
  }
</script>



























