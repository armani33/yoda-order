<%= render "shared/navbar" %>
<div class="navbar-height"></div>

<div class="buy-wrapper-container">
  <div class="buy-page-container">
    <div class="page-content-1">
      <div class="text-container">
        <h1>Get one home<span>.</span></h1>
        <p>The simplicity of a bicycle, the efficiency of a motorcycle.</p>
        <%= link_to cart_path do %>Reserve yours for 500€<% end %>
      </div>
    </div>
  </div>

  <div class="buy-page-container">
    <div class="page-content-2">
      <div class="left-side">
        <%= image_tag('App/Iphone_X-eco-app-buy-2@2x.png') %>
      </div>
      <div class="right-side">
        <div class="text-container">
          <h2>Manage<br>your juice<span>.</span></h2>
          <div class="ecomode-container">
            <div class="eco">
              <%= image_tag('App/Eco-mode-On@2x.png') %>
              <p>Economic mode <span>[30 km/h - 65 km]</span></p>
            </div>
            <div class="eco">
              <%= image_tag('App/Eco-mode-Off@2x.png') %>
              <p>Regular mode <span>[45 km/h - 50 km]</span></p>
            </div>
          </div>
          <!-- Calendly link widget begin -->
          <link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
          <script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript"></script>
          <a href="" onclick="Calendly.initPopupWidget({url: 'https://calendly.com/yodacity-test-ride/30min'});return false;">Book a test ride</a>
          <!-- Calendly link widget end -->
        </div>
      </div>
    </div>
  </div>

  <div class="buy-page-container">
    <div class="page-content-3">
      <div class="text-container">
        <h1>No more pain<span>.</span></h1>
        <p>Riding posture and components optimized for comfort.</p>
        <!-- Calendly link widget begin -->
        <link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
        <script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript"></script>
        <a href="" onclick="Calendly.initPopupWidget({url: 'https://calendly.com/yodacity-test-ride/30min'});return false;">Book a test ride</a>
        <!-- Calendly link widget end -->
      </div>
    </div>
  </div>

  <div class="buy-page-container">
    <div class="page-content-4">
      <div class="text-container">
        <h2>Charge anywhere<span>.</span></h2>
        <p>Take the battery with you. Full charge in 4 hours.</p>
        <%= link_to cart_path do %>Reserve yours for 500€<% end %>
      </div>
    </div>
  </div>



  <div class="buy-page-container">
    <section id="slideshow-wrapper">
      <div id="Slideshow">
        <div id="Slider">

          <div id="slide" class="first-second">
            <div class="left-side">
              <div class="text-container">
                <h3>Peace of mind<span>.</span></h3>
                <p>Be notified of suspicious activity.</p>
              </div>
            </div>
            <div class="right-side">
              <%= image_tag('App/Iphone_X-notif-home-theft@2x.png') %>
            </div>
          </div>
          <div id="slide" class="first-second">
            <div class="left-side">
              <div class="text-container">
                <h3>Track your Yoda<span>.</span></h3>
                <p>Geo-localize your stolen bike.</p>
              </div>
            </div>
            <div class="right-side">
              <%= image_tag('App/Iphone_X-track-map-theft@2x.png') %>
            </div>
          </div>

          <div id="slide" class="third">
            <div class="text-container">
              <h3>Motor locked<span>.</span></h3>
              <p>Opportunity thieves wont hijack your Yoda.</p>
            </div>
          </div>
        </div>
        <div id="Arrows">
          <i id="Prev" class="fa fa-chevron-left fa-2x" aria-hidden="true"></i>
          <i id="Next" class="fa fa-chevron-right fa-2x" aria-hidden="true"></i>
        </div>
      </div>
    </section>
  </div>

  <div class="buy-page-container">
    <div class="technical-specs-container">
      <div class="technical-specs-content">
        <h2>Technical Specifications</h2>
        <table>
          <tr>
            <th>Maximum speed</th>
            <td>45 km/h [Regular mode] <span>OR</span> 30 km/h [Economic mode]</td>
          </tr>
          <tr>
            <th>Battery range</th>
            <td>50 km [Regular mode] <span>OR</span> 65 km [Economic mode]</td>
          </tr>
          <tr>
            <th>Removable battery</th>
            <td>Lithium-ion 24 Ah, 52 V, 8 kg</td>
          </tr>
          <tr>
            <th>Charging time</th>
            <td>100% recharged in 4 hours</td>
          </tr>
          <tr>
            <th>Street legal</th>
            <td>Car license (B) or motorcycle license (AM, A3)</td>
          </tr>
          <tr>
            <th>Weight</th>
            <td>Lightest motorcycle on the market, 29.1 kg</td>
          </tr>
          <tr>
            <th>Connectivity</th>
            <td>Bluetooth Low Energy</td>
          </tr>
          <tr>
            <th>Rider height</th>
            <td>Fits people 155 to 200 cm tall</td>
          </tr>
          <tr>
            <th>Warranty</th>
            <td>2 years</td>
          </tr>
          <tr>
            <th>Price</th>
            <td>2,490€</td>
          </tr>
        </table>
      </div>
    </div>
  </div>

  <div class="buy-page-container">
    <div class="page-content-5">
      <div class="text-container">
        <h2>Book it now<span>.</span></h2>
        <p>Book your Yoda with a deposit of 500€. Pay the<br>difference when we delivered it in June 2020.</p>
        <%= link_to cart_path do %>Reserve yours for 500€<% end %>
      </div>
    </div>
  </div>

</div>


<script>//Manual Slideshow with navigation arrow
  $("#Next").click(function(){
    $("#Slider").append($("#Slider #slide:first-of-type"));
  });

  $("#Prev").click(function(){
    $("#Slider").prepend($("#Slider #slide:last-of-type"));
  });
</script>


