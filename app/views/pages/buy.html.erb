<script>//Manual Slideshow with navigation arrow
  $("#Next").click(function(){
    $("html, body").animate({scrollTop: $("#Slider").offset().top})
    $("#Slider").append($("#Slider #slide:first-of-type"));

  });

  $("#Prev").click(function(){
    $("html, body").animate({scrollTop: $("#Slider").offset().top})
    $("#Slider").prepend($("#Slider #slide:last-of-type"));
  });
</script>

<script>
  var page_4_bottom = $('#page-5').offset().top + $('#page-5').height()*0.95;
  var page_slide_bottom = $('#slideshow-wrapper').offset().top + $('#slideshow-wrapper').height();
  $('.nav-logo-white').css('display', 'none');
  $('.nav-logo-black').css('display', 'inline');

  $('.rent').css('border-color', 'black');
  $('.rent').css('background-color', 'white');
  $('.rent').css('color', 'black');
  $('.buy').css('border-color', 'black');
  $('.buy').css('background-color', 'black');
  $('.buy').css('color', 'white');
  // on scroll,
  $(window).on('scroll',function(){

      // we round here to reduce a little workload
      var stop = Math.round($(window).scrollTop());

      if (stop > page_4_bottom - page_4_bottom*0.01 && stop < page_slide_bottom) {
          $('.nav-logo-white').css('display', 'inline');
          $('.nav-logo-black').css('display', 'none');

          $('.rent').css('border-color', 'white');
          $('.rent').css('background-color', 'black');
          $('.rent').css('color', 'white');
          $('.buy').css('border-color', 'white');
          $('.buy').css('background-color', 'white');
          $('.buy').css('color', 'black');
      } else {
          $('.nav-logo-white').css('display', 'none');
          $('.nav-logo-black').css('display', 'inline');

          $('.rent').css('border-color', 'black');
          $('.rent').css('background-color', 'white');
          $('.rent').css('color', 'black');
          $('.buy').css('border-color', 'black');
          $('.buy').css('background-color', 'black');
          $('.buy').css('color', 'white');
      }

  });
</script>
