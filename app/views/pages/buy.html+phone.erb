      <script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript"></script>
      <a href="" onclick="Calendly.initPopupWidget({url: 'https://calendly.com/yodacity-test-ride/30min'});return false;">Book a test ride</a>
      <!-- Calendly link widget end -->
    </div>
  </div>

  <div class="page-mobile-container">
    <div class="page-mobile-content-3">
      <div class="text-container">
        <div class="text-content">
          <h2>No more pain<span>.</span></h2>
          <p>Riding posture and components optimized for comfort.</p>
          <!-- Calendly link widget begin -->
          <link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
          <script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript"></script>
          <a href="" onclick="Calendly.initPopupWidget({url: 'https://calendly.com/yodacity-test-ride/30min'});return false;">Book a test ride</a>
          <!-- Calendly link widget end -->
        </div>
      </div>
      <div class="image">
        <%= image_tag('Yoda/Mobile/Yoda-back-view-pain-mobile-buy-3@2x.png') %>
      </div>
    </div>
  </div>

  <div class="page-mobile-container">
    <div class="page-mobile-content-4">
      <div class="text-container">
        <div class="text-content">
          <h2>Charge anywhere<span>.</span></h2>
          <p>Take the battery with you. Full charge in 4 hours.</p>
          <%= link_to "#order" do %>Reserve yours for 500€<% end %>
        </div>
      </div>
      <div class="image">
        <%= image_tag('Yoda/Mobile/Yoda-battery-mobile-buy-4@2x.png') %>
      </div>
    </div>
  </div>

  <div class="page-mobile-container">
    <div class="page-mobile-content-5">
      <div class="text-container">
        <div class="text-content">
          <h2>Go the distance<span>.</span></h2>
          <p>Ride uphill, downhill, on-road, off-road. Nothing stop a Yoda.</p>
          <%= link_to "#order" do %>Reserve yours for 500€<% end %>
        </div>
      </div>
      <div class="image">
        <%= image_tag('Yoda/Mobile/Yoda-buy-mobile-go-distance@2x.png') %>
      </div>
    </div>
  </div>

  <div class="page-mobile-container">
    <section id="slideshow-wrapper">
      <div id="Slideshow">
        <div id="Slider">
          <div id="slide" class="first-second">
            <div class="text-container">
              <h3>Peace of mind<span>.</span></h3>
              <p>Be notified of suspicious activity.</p>
            </div>
            <div class="image">
              <%= image_tag('App/Mobile/Iphone_X-notif-home-theft-mobile@2x.png') %>
            </div>
          </div>
          <div id="slide" class="first-second">
            <div class="text-container">
              <h3>Track your Yoda<span>.</span></h3>
              <p>Geo-localize your stolen bike.</p>
            </div>
            <div class="image">
              <%= image_tag('App/Mobile/Iphone_X-track-map-theft-mobile@2x.png') %>
            </div>
          </div>
          <div id="slide" class="third">
            <div class="text-container">
              <h3>Motor locked<span>.</span></h3>
              <p>Opportunity thieves wont hijack your Yoda.</p>
            </div>
          </div>
        </div>
        <div id="Arrows">
          <i id="Prev" class="fa fa-chevron-left fa-2x" aria-hidden="true"></i>
          <i id="Next" class="fa fa-chevron-right fa-2x" aria-hidden="true"></i>
        </div>
      </div>
    </section>
  </div>

  <div class="page-mobile-container">
    <div class="page-mobile-content-6">
      <div class="featurs-container">
        <div class="row">
          <div class="feature">
            <%= image_tag('Checkout/Battery-range@2x.png') %>
            <p class= "title">65 km</p><p>Range per charge</p>
          </div>
          <div class="feature">
            <%= image_tag('Checkout/Max-speed@2x.png') %>
            <p class= "title">45 km/h</p><p>Maximum Speed</p>
          </div>
          <div class="feature">
            <%= image_tag('Checkout/Weight@2x.png') %>
            <p class= "title">27 kg</p><p>Weight of a Yoda</p>
          </div>
        </div>
        <div id="order"></div>
        <div class="row">
          <div class="feature">
            <%= image_tag('Checkout/Charging-time@2x.png') %>
            <p class= "title">4 hours</p><p>Charging time</p>
          </div>
          <div class="feature">
            <%= image_tag('Checkout/Connectivity@2x.png') %>
            <p class= "title">Connectivity</p><p>Bluetooth Low Energy</p>
          </div>
          <div class="feature">
            <%= image_tag('Checkout/Street-legal@2x.png') %>
            <p class= "title">Street legal</p><p>Car license B or A3 or AM</p>
          </div>
        </div>
      </div>
      <div class="text-book">
        <h2>Book it now<span>.</span></h2>
        <p>Book your Yoda with a deposit of 500€.<br>Pay the balance when we delivered it in June 2020.</p>
        <%= link_to "#order" do %>Reserve for 500€<% end %>
        <h4>2.499€</h4>
      </div>
      <div class="text-price">
        <p>Production begins February 2020.</p>
        <p>Delivery estimate for this batch mid June 2020.</p>
        <p>2.499€ is for the production batch of 2020<br>(a Yoda will cost 2.990€ on the next batch).</p>
      </div>
    </div>
  </div>

  <%= render "shared/footer-mobile" %>
</div>


<script>
  $(document).ready(function() {
      $(window).scroll(function() {
          var height = $('.page-mobile-content-1').height();
          var scrollTop = $(window).scrollTop();

          if (scrollTop >= height - height*0.96) {
              $('.nav-mobile-container').addClass('solid-nav');
          } else {
              $('.nav-mobile-container').removeClass('solid-nav');
          }
      });
  });
</script>

<script>//Manual Slideshow with navigation arrow
  $("#Next").click(function(){
    $("#Slider").append($("#Slider #slide:first-of-type"));
  });

  $("#Prev").click(function(){
    $("#Slider").prepend($("#Slider #slide:last-of-type"));
  });
</script>

