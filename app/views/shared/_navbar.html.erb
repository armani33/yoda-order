<nav class="nav-container">
  <div class="nav-content">
    <div class="nav-logo-black">
      <%= link_to root_path do %>
        <%= image_tag('Logo/Logo@2x.png', class: "logo-black") %>
      <% end %>
    </div>
    <div class="nav-logo-white">
      <%= link_to root_path do %>
        <%= image_tag('Logo/Logo-white@2x.png', class: "logo-white") %>
      <% end %>
    </div>

    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>

    <div class="btn-container">
      <% if @rent_navbar %>
        <%= link_to "#km-order" do%><div class="nav-btn rent">Get free km</div><% end %>
        <%= link_to root_path do%><div class="nav-btn buy">Buy a Yoda</div><% end %>
      <% elsif @refer_friend_navbar %>
        <%= link_to "#km-order" do%><div class="nav-btn rent">50% on km</div><% end %>
        <%= link_to buy_a_yoda_path do%><div class="nav-btn buy">Buy a Yoda</div><% end %>
      <% else %>
        <%= link_to rent_a_yoda_path do%><div class="nav-btn rent">Rent a Yoda</div><% end %>
        <%= link_to "#order" do%><div class="nav-btn buy">Pre-order</div><% end %>
      <% end %>
    </div>
  </div>
</nav>
