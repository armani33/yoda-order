<%= form_for @contact, url: contact_index_path, method: :post, id: "contact-form", remote: true do |f| %>
  </br>
  </br>
  <%= f.text_field  :name, :placeholder => "Name", id: "contact-user-info", required: true, class: "contact-form-text-area" %></br>

  </br>
  </br>
  <%= f.text_field :email, :placeholder => "Email", id: "contact-user-info", required: true, class: "contact-form-text-area" %></br>

  </br>
  </br>
  <%= f.text_field :phone, :placeholder => "Phone Number", id: "contact-user-info", required: true, class: "contact-form-text-area" %></br>

  </br>
  </br>
  <%= f.text_area :message, id: "contact-user-info", rows:9, cols: 72, required: true, class: "contact-form-text-area", placeholder: "Message"%></br>
  </br>
  <%= f.submit 'Send', class: 'btn-submit' %>
<% end %>

