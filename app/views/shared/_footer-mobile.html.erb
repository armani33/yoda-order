<div class="footer-mobile-container">
  <div class="footer-top-container">
    <%= link_to root_path do %>
      <%= image_tag('Logo/Logo-white@2x.png', class: 'logo-image') %>
    <% end %>
    <div class="list-menu">
      <ul class="list product">
        <li>PRODUCT</li>
        <li><%= link_to bike_path do %>Bike<% end %></li>
        <li><%= link_to app_path do %>App<% end %></li>
        <li><%= link_to support_path do %>Support<% end %></li>
        <li><%= link_to reviews_path do %>Reviews<% end %></li>
        <li><%= link_to page_warranty_path do %>Warranty<% end %></li>
      </ul>
      <div class="infos-list">
        <ul class="list infos">
          <li>INFOS</li>
          <li><%= link_to page_faq_path do %>FAQ<% end %></li>
          <li><%= link_to root_path do %>Press<% end %></li>
          <li><%= link_to root_path do %>Contact<% end %></li>
          <li><%= link_to page_delivery_path do %>Delivery<% end %></li>
          <li><%= link_to page_returns_path do %>Returns<% end %></li>
        </ul>
      </div>
    </div>
    <div class="newsletter-container">
      <div class="newsletter-content-mobile">
        <p>SIGN UP TO OUR NEWSLETTER</p>
        <%= form_for @user, url: users_create_path, class: "footer-form", method: :post do |f| %>
          <%= f.text_field :email, :placeholder => "Type in your email" %>
          <submit type="submit"><i class="fas fa-arrow-right"></i></submit>
        <% end %>
      </div>
    </div>
    <div class="social-links">
      <div class="social">
        <a href="https://www.facebook.com/yodacity"><i class="fab fa-facebook-square"></i></a>
        <a href="https://www.instagram.com/yodacity"><i class="fab fa-instagram"></i></a>
      </div>
    </div>
  </div>
  <div class="footer-bottom-container">
    <div class="legal-menu-footer">
      <%= link_to root_path do %>TERMS OF USE<% end %>
      <%= link_to page_privacy_policy_path do %>PRIVACY POLICY<% end %>
      <p>Â© 2019 YODACITY</p>
    </div>
  </div>
</div>
