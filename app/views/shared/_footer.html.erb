    <div class="footer-content-top">

      <div class="content-left">
        <div class="brand">
          <div class="footer-logo">
            <%= link_to root_path do %>
              <%= image_tag('Logo/Logo-white@2x.png', class: 'logo-image') %>
            <% end %>
          </div>
        </div>
        div.
