<div class="reviews-main-container">
  <%= link_to reviews_manage_new_path, id: "add-review" do %><p>Add review</p><% end %>
  <div class="reviews-container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    <div class="reviews-content">
      <% @reviews.each do |review| %>
        <div class="review-card">

          <div class="card-top">
            <div class="top-left">
              <p class="name"><%= review.name %></p>
              <div class="rating">
                <% review.rating.times do  %>
                  <i class="green fas fa-star"></i>
                <% end %>
                <% review.blank_stars.times do %>
                  <i class="grey fas fa-star"></i>
                <% end %>
              </div>
            </div>
            <div class="top-right">
              <p class="city"><%= review.city %></p>
              <p class="datum"><%= review.datum %></p>
            </div>
          </div>

          <div class="card-comment">
            <p class="comment"><%= review.comment %></p>
          </div>
          <div class="footer-btn-card">
            <%= link_to edit_review_path(review) do %>
              <div class="edit btnn">Edit</div>
            <% end %>
            <%= link_to review_path(review), method: :delete do %>
              <div class="delete btnn">Delete</div>
            <% end %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
